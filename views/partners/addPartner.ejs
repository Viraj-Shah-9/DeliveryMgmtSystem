<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <h3>Create New Partner</h3>
        <form action="/api/partners" method="post">
            <!-- Partner Name -->
            <div class="mb-3">
                <label for="name" class="form-label">Partner Name</label>
                <input type="text" name="name" placeholder="Enter Partner's Name" class="form-control" required />
                <div class="invalid-feedback">Partner name is mandatory</div>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" placeholder="Enter Partner's Email" class="form-control" required />
                <div class="invalid-feedback">Valid email is mandatory</div>
            </div>

            <!-- Phone -->
            <div class="mb-3">
                <label for="phone" class="form-label">Phone Number</label>
                <input type="text" name="phone" placeholder="Enter 10-digit Phone Number" class="form-control" required />
                <div class="invalid-feedback">Valid phone number is mandatory</div>
            </div>

            <!-- Status -->
            <div class="mb-3">
                <label for="status" class="form-label">Status</label>
                <select name="status" class="form-select" required>
                    <option value="" disabled selected>Select Status</option>
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                </select>
                <div class="invalid-feedback">Status is mandatory</div>
            </div>

            <!-- Service Areas -->
            <div class="mb-3">
                <label for="areas" class="form-label">Service Areas</label>
                <input type="text" name="areas" placeholder="Enter areas (comma-separated)" class="form-control" />
                <div class="form-text">Example: Downtown, Uptown, Suburbs</div>
            </div>

            <!-- Shift Start -->
            <div class="mb-3">
                <label for="shift_start" class="form-label">Shift Start</label>
                <input type="time" name="shift_start" class="form-control" required />
                <div class="invalid-feedback">Shift start time is mandatory</div>
            </div>

            <!-- Shift End -->
            <div class="mb-3">
                <label for="shift_end" class="form-label">Shift End</label>
                <input type="time" name="shift_end" class="form-control" required />
                <div class="invalid-feedback">Shift end time is mandatory</div>
            </div>

            <!-- Metrics (Optional) -->
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="rating" class="form-label">Rating</label>
                    <input name="rating" placeholder="5" class="form-control" type="number" step="0.1" min="0" max="5" />
                    <div class="form-text">Default: 5 (Range: 0-5)</div>
                </div>

                <div class="mb-3 col-md-4">
                    <label for="completedOrders" class="form-label">Completed Orders</label>
                    <input name="completedOrders" placeholder="0" class="form-control" type="number" min="0" />
                    <div class="form-text">Default: 0</div>
                </div>

                <div class="mb-3 col-md-4">
                    <label for="cancelledOrders" class="form-label">Cancelled Orders</label>
                    <input name="cancelledOrders" placeholder="0" class="form-control" type="number" min="0" />
                    <div class="form-text">Default: 0</div>
                </div>
            </div>

            <!-- Submit Button -->
            <button class="btn btn-dark add-btn mt-2 mb-3">Add Partner</button>
        </form>
    </div>
</div>
