<% layout("/layouts/boilerplate") %>

<body>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3 g-4">
        <% for(assignment of assignments) { %>
            <div class="col">
                <div class="card assignment-card h-100">
                    <div class="card-body p-3">
                        <p class="card-text">
                            <h4>Assignment Details: </h4>
                            <hr/>
                            <b>Order Id: </b> <%= assignment.orderId.orderNumber %> <br>
                            <b>Partner:</b> <%= assignment.partnerId.name %> <br>
                            <b>Status:</b> <%= assignment.status %> <br>
                        </p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</body>
